FROM mysql:latest

ARG DB_HOST
ARG DB_USER
ARG DB_PASSWORD
ARG DB_DATABASE

ENV DB_HOST=$DB_HOST
ENV DB_USER=$DB_USER
ENV DB_PASSWORD=$DB_PASSWORD
ENV DB_DATABASE=$DB_DATABASE
ENV MYSQL_ROOT_PASSWORD=$DB_PASSWORD
ENV MYSQL_DISALLOW_LOGIN_ROOT=yes

COPY ./sql-scripts/ /docker-entrypoint-initdb.d/

EXPOSE 3306

CMD ["mysqld"]